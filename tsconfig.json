{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es2017",
      "outDir": "./build",
      "baseUrl": "./src",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts", "src/server.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }